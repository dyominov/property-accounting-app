{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "overrides": [
    {
      "files": ["*.js"],
      "parser": "espree",
      "plugins": ["jsdoc"],
      "parserOptions": {
        "ecmaVersion": 13
      }
    }
  ],
  "rules": {
    "@next/next/no-img-element": "off",
    "jsx-a11y/alt-text": "off",
    "react/display-name": "off",
    "react/jsx-max-props-per-line": [
      1,
      {
        "maximum": 3
      }
    ],
    "semi":"error",
    "semi-style":"error"
  }
}
